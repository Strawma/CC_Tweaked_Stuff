os.loadAPI("strawma_api")
local MODEM = "right"
local CHANNEL = strawma_api.getChannel()

rednet.open(MODEM)
while true do
    local id, cmd, channel = rednet.receive()
    if channel == CHANNEL then
        print("Received command: " .. cmd)
        if cmd == "tp" then
            turtle.select(16)
            turtle.dig()
            turtle.suck()
            turtle.dropUp()
            turtle.select(1)
        end
        turtle.refuel()
        print ("Current fuel level: " .. turtle.getFuelLevel())
    end
end