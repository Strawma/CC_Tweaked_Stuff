os.loadAPI("strawma-api.lua")

local CHANNEL = strawma-api.getChannel()
local MODEM = "back"

rednet.open(MODEM)


function sendCmd(cmd)
        rednet.broadcast(cmd, CHANNEL)
end

while true do
    write("Enter command: ")
    local cmd = read()
    if cmd == "exit" then
        break
    end
    sendCmd(cmd)
end