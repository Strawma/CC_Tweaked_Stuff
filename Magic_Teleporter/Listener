local MODEM = "right"

rednet.open(MODEM)
while true do
    local id, cmd = rednet.receive()
    print("Received command: " .. cmd)
    if cmd == "tp" then
        turtle.select(16)
        turtle.dig()
        turtle.suck()
        turtle.dropUp()
        turtle.select(1)
    end
    turtle.refuel()
    print ("Current fuel level: " .. turtle.getFuelLevel())
end